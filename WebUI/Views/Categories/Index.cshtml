@model IEnumerable<CategoryDto>
@{
}

<h1>Categories</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th class="text-end"><a asp-action="Create" class="btn btn-success">Add New</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td class="text-end">
                    <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-primary">Update</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>